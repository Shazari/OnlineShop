
<div class="boxed-area blocks-spacer">
    <div class="container">

        <!--  ==========  -->
        <!--  = Title =  -->
        <!--  ==========  -->
        <div class="row">
            <div class="span12">
                <div class="main-titles lined">
                    <h2 class="title"><span class="light">محصولات</span> جدید فروشگاه</h2>
                </div>
            </div>
        </div> <!-- /title -->

        <div class="row popup-products blocks-spacer">

            
            <!--  ==========  -->
            <!--  = Product =  -->
            <!--  ==========  -->
            <!-- /product -->
            @if (Products != null)
            {


            @foreach (var item in Products)
                {

            <div class="span3">
                <div class="product">
                    <div class="product-img featured">
                        <div class="picture">
                            <img src=@(item.Image) alt="" width="540" height="374" />
                            <div class="img-overlay">
                                <NavLink href="@($"/ProductDetails/{item.Id}")" class="btn more btn-primary">توضیحات بیشتر</NavLink>
                                @*<Button @onclick="()=>MoreDetails(item)" class="btn more btn-primary">توضیحات بیشتر</Button>*@
                               
                                <Button @onclick="()=>AddToBasket(item)" class="btn buy btn-danger">اضافه به سبد خرید</Button>
                            </div>

                        </div>
                    </div>
                    <div class="main-titles no-margin">
                        <h3 class="title">@(item.Name)</h3>
                        <h4 class="title">$@(item.Price)</h4>
                       
                    </div>
                    <p class="desc">@(item.ShortDescription)</p>
                    <p class="center-align stars">
                        <span class="icon-star stars-clr"></span>
                        <span class="icon-star stars-clr"></span>
                        <span class="icon-star"></span>
                        <span class="icon-star"></span>
                        <span class="icon-star"></span>

                    </p>
                </div>
            </div>

                }
            }
            else
            {
            <h1>Wait</h1>
            }


        </div>
    </div>
</div>


